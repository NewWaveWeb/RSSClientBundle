<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>        
        <parameter key="rss_client.class">Desarrolla2\RSSClient\RSSClient</parameter>        
    </parameters>

    <services>
        <service id="rss_client.sanitizer" class="%rss_client.sanitizer.class%" >
            <argument type="string">%kernel.cache_dir%</argument>
        </service>
        <service id="rss_client" class="%rss_client.class%">
            <call method="setChannels">
                <argument>%rss_client.channels%</argument>
            </call>
        </service>
    </services>
</container>
